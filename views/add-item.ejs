<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head') %>
<body>
    <%- include('./partials/nav') %>

    <div class="row container">
        <form class="col s12" method="post" action="/items/add">
          <div class="row">
            <div class="input-field col s6">
              <i class="material-icons prefix">account_circle</i>
              <input id="icon_prefix" type="text" class="validate" name="name" required>
              <label for="icon_prefix">First Name</label>
            </div>
            <div class="input-field col s6">
              <i class="material-icons prefix">monetization_on</i>
              <input id="icon_telephone" type="number" class="validate" required name="price">
              <label for="icon_telephone">price</label>
            </div>
          </div>
          <button class="btn">Add Item</button>
        </form>
      </div>
            
    
    <%- include('./partials/footer') %>
</body>
</html>